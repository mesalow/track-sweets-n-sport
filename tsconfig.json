{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "lib": ["es6", "DOM"],
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "strictFunctionTypes": true,
    "jsx": "react-jsx",
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": ["mocha", "chai"]
  },
  "include": ["src/**/*", "cypress.config.ts"]
}
